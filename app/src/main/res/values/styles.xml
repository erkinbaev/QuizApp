<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="backgroundColor">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/purple_700</item>
    </style>

    <style name="AnswerButtonStyle" parent="android:MediaButton">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundColor">@color/purple_200</item>
        <item name="android:textColor">#6979F8</item>
        <item name="android:text">"helloW"</item>
    </style>

    <style name="Light" parent="AppTheme">
        <item name="backgroundColor">@color/light</item>
    </style>

    <style name="Dark" parent="AppTheme">
        <item name="backgroundColor">@color/dark</item>
    </style>

    <style name="Silver" parent="AppTheme">
        <item name="backgroundColor">@color/silver</item>
    </style>

    <style name="Gold" parent="AppTheme">
        <item name="backgroundColor">@color/gold</item>
    </style>

    <style name="Android" parent="AppTheme">
        <item name="backgroundColor">@color/purple_700</item>
    </style>

</resources>