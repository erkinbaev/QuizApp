<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Test text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/answer_btn1"
                style="@style/AnswerButtonStyle"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/four_answers"
                android:text="answer 1" />

            <Button
                android:id="@+id/answer_btn2"
                style="@style/AnswerButtonStyle"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/four_answers"
                android:text="answer 2" />

            <Button
                android:id="@+id/answer_btn3"
                style="@style/AnswerButtonStyle"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/four_answers"
                android:text="answer 3" />

            <Button
                android:id="@+id/answer_btn4"
                style="@style/AnswerButtonStyle"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/four_answers"
                android:text="answer 4" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_boolean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/answer_btn5"
                style="@style/AnswerButtonStyle"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/four_answers"
                android:text="answer 1" />

            <Button
                android:id="@+id/answer_btn6"
                style="@style/AnswerButtonStyle"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/four_answers"
                android:text="answer 2" />

        </LinearLayout>

    </LinearLayout>
</layout>
